<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitnessapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:name=".FitnessAppAndroidApplication">
        <activity android:name=".activities.Leaderboard.LeaderboardPublicActivity"
            android:exported="true"
            android:label="Öffentliche Leaderboards"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity android:name=".activities.Leaderboard.LeaderboardJoinedActivity"
            android:exported="true"
            android:label="Beigetretene Leaderboards"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity android:name=".activities.Leaderboard.LeaderboardMainActivity"
            android:exported="true"
            android:label="Haupt Leaderboard"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity
            android:name=".activities.TrainingsverwaltungActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            />

        <activity android:name=".activities.DrawerBaseActivity" />
        <activity
            android:name=".activities.CreateExerciseActivity"
            android:exported="true"
            android:label="Übung erstellen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".activities.Leaderboard.LeaderboardActivity"
            android:exported="true"
            android:label="Leaderboard"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="FitnessApp"
            android:theme="@style/Theme.AppCompat.DayNight"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>